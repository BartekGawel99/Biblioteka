@page
@model Biblioteka.Pages.Books.DeleteModel

<h3>Czy na pewno chcesz usunać tę książkę?</h3>
<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Book.Title)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Book.Title)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Book.ReleaseDate)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Book.ReleaseDate)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Book.ISBN)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Book.ISBN)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Book.Description)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Book.Description)
        </dd>
        <dt class="col-sm-2">
            Autor:
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Book.Author.FirstName) @Html.DisplayFor(model => model.Book.Author.LastName)
        </dd>
    </dl>
    
    <form method="post">
        <input type="hidden" asp-for="Book.BookId" />
        <input type="submit" value="Usuń" class="btn btn-danger" /> |
        <a class="btn btn-outline-primary" asp-page="/Library/MainPage">Wróć do Listy</a>
    </form>
</div>
